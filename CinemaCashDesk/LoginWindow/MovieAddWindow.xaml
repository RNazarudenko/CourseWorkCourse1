<Window x:Class="LoginWindow.MovieAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginWindow"
        mc:Ignorable="d"
        Title="Додати фільм" Height="520" Width="800" MaxHeight="520" MinHeight="520" MaxWidth="800" MinWidth="800" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Назва"/>
            <TextBox Name="TitleTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Вік"/>
            <TextBox Name="AgeTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Рік випуску"/>
            <TextBox Name="YearTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Оригінальна назва"/>
            <TextBox Name="OriginalNameTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Рейтинг"/>
            <TextBox Name="RatingTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Мова"/>
            <TextBox Name="LanguageTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Жанр"/>
            <TextBox Name="GenreTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Тривалість"/>
            <TextBox Name="DurationTextBox" Margin="0,5,0,10"/>

            <Button x:Name="AddMovie" Content="Додати" Width="100" HorizontalAlignment="Center" Margin="0,20,0,0" Click="AddMovie_Click"/>
        </StackPanel>
    </Grid>
</Window>